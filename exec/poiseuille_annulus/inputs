amr.stop_time           =   -1.         # Max (simulated) time to evolve
amr.max_step            =   100         # Max number of time steps
amr.steady_state        =   0           # Steady-state solver? 

#¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨#
#         TIME STEP COMPUTATION         #
#.......................................#
